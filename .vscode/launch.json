    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "runtimeExecutable": "mocha",
            "windows": {
                "runtimeExecutable": "mocha.cmd"
            },
            "preLaunchTask": "build",
            "runtimeArgs": [
                "--debug-brk",
                "./dist/test/index.js"
            ],
            "program": "${workspaceRoot}\\test\\index.ts",
            "outFiles": [
                "${workspaceRoot}\\dist\\**\\*.js"
            ],
            "port": 5858
        }
    ]
}